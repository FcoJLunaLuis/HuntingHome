<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".vistas.ItemsResidenciasPropias">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <Switch
            android:id="@+id/swchDispRes"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:padding="5dp"
            android:layout_weight=".5"/>

        <Button
            android:id="@+id/btnEdtRes"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight=".5"
            android:padding="20dp"
            android:text="Editar"
            android:textColor="#000000"
            android:textSize="8sp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/ivImgResidenciaPropia"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:padding="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvMunicipioResPrp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:fontFamily="@font/roboto_light"
            android:textColor="#000000"
            android:text="Municipio"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tvEstadoResPrp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:fontFamily="@font/roboto_light"
            android:textColor="#000000"
            android:text="Estado"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvComunidadResPrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:textColor="#000000"
        android:text="Comunidad"
        android:paddingLeft="10dp"
        android:textSize="15sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:orientation="horizontal"
        android:paddingLeft="10sp">

        <TextView
            android:id="@+id/tvTipoResPrp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:textColor="#000000"
            android:text="TipoResidencia"
            android:textSize="15sp"
            android:layout_weight=".50"/>
        <TextView
            android:id="@+id/tvPrecioResPrp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:textColor="#000000"
            android:text="Precio"
            android:textSize="15sp"
            android:layout_weight=".50"/>
    </LinearLayout>

</LinearLayout>